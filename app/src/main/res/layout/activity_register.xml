<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="happyhappyinc.developer.incubeapp.activities.MainActivity">

    <ScrollView
        android:id="@+id/nsv_scroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="60dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:layout_marginStart="60dp"
                android:src="@drawable/logo_happy" />

            <TextView
                android:id="@+id/tv_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/iv_logo"
                android:layout_alignRight="@+id/iv_logo"
                android:layout_below="@+id/iv_logo"
                android:layout_marginBottom="30dp"
                android:text="Lorepm iasdiasid adghausd asduhaisudy asuiduiadasdh hh jjjjsj iasdidad"
                android:textAlignment="center"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_facebook_register"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_info"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_purple_social_consolidate_background"
                android:drawableLeft="@drawable/ic_mail_white_18dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="registrarse con facebook"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_mail_register"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/btn_facebook_register"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_purple_social_consolidate_background"
                android:drawableLeft="@drawable/ic_mail_white_18dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="registrarse con tu correo"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_phone_register"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/btn_mail_register"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_purple_social_consolidate_background"
                android:drawableLeft="@drawable/ic_phone_iphone_white_18dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="registrarse con tu celular"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_i_have_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/btn_facebook_register"
                android:layout_alignLeft="@+id/btn_facebook_register"
                android:layout_alignRight="@+id/btn_facebook_register"
                android:layout_alignStart="@+id/btn_facebook_register"
                android:layout_below="@+id/btn_phone_register"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="30dp"
                android:background="@android:color/transparent"
                android:text="Ya tengo una cuenta"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary" />

        </RelativeLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>
